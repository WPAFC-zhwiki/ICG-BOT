{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		":gitSignOff"
	],
	"automerge": true,
	"automergeType": "pr-comment",
	"automergeComment": "@renovate:merge",
	"baseBranches": [
		"master"
	],
	"branchConcurrentLimit": 5,
	"bumpVersion": "patch",
	"cloneSubmodules": true,
	"draftPR": true,
	"lockFileMaintenance": {
		"enabled": true
	},
	"packageRules": [
		{
			"matchPackagePrefixes": [
				"eslint",
				"@typescript-eslint/"
			],
			"labels": [
				"linting"
			],
			"followTag": "insiders"
		}
	],
	"schedule": [
		"* 8 */5 * *"
	]
}
