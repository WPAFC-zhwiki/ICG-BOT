{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"wikimedia",
		"wikimedia/node",
		"wikimedia/language/es2021",
		"plugin:import/recommended"
	],
	"globals": {
		"$": "off"
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"plugins": [
		"@typescript-eslint",
		"import"
	],
	"rules": {
		"camelcase": "off",
		"max-len": [
			"warn",
			{
				"code": 120,
				"tabWidth": 4,
				"ignorePattern": "^// eslint-.+",
				"ignoreUrls": true,
				"ignoreComments": false,
				"ignoreRegExpLiterals": true,
				"ignoreStrings": true,
				"ignoreTemplateLiterals": true
			}
		],
		"new-cap": [
			"error",
			{
				"newIsCapExceptions": [
					"mwn"
				],
				"newIsCapExceptionPattern": "^mwn\\..|^mw[Bb]ot\\.."
			}
		],
		"no-console": "off",
		"no-underscore-dangle": "off",
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "after-used",
				"ignoreRestSiblings": false,
				"argsIgnorePattern": "^_"
			}
		],
		"no-use-before-define": [
			"off",
			{
				"functions": false,
				"classes": false,
				"variables": false
			}
		],
		"one-var": "off",
		"prefer-const": "off",
		"strict": [
			"error",
			"global"
		],
		"template-curly-spacing": [
			"error",
			"always"
		],
		"vars-on-top": "off",
		"import/no-unresolved": "off"
	},
	"settings": {
		"jsdoc": {
			"mode": "typescript"
		}
	},
	"overrides": [
		{
			"files": [
				"*.ts",
				"**/*.ts"
			],
			"parser": "@typescript-eslint/parser",
			"parserOptions": {
				"ecmaVersion": 12,
				"project": "tsconfig.json"
			},
			"extends": [
				"plugin:@typescript-eslint/recommended",
				"plugin:import/typescript"
			],
			"plugins": [
				"deprecation"
			],
			"rules": {
				"es-x/no-class-fields": "off",
				"node/no-missing-import": "off",
				"deprecation/deprecation": [
					"warn"
				],
				"import/order": [
					"error",
					{
						"groups": [
							"builtin",
							"external",
							"internal",
							[
								"parent",
								"sibling"
							],
							"index",
							"unknown"
						],
						"newlines-between": "always",
						"alphabetize": {
							"order": "asc",
							"caseInsensitive": true
						},
						"warnOnUnassignedImports": true,
						"pathGroups": [
							{
								"pattern": "@app/lib/**",
								"group": "internal",
								"position": "after"
							},
							{
								"pattern": "@app/modules/**",
								"group": "internal",
								"position": "after"
							}
						]
					}
				]
			},
			"settings": {
				"import/resolver": {
					"typescript": {
						"alwaysTryTypes": true,
						"project": "tsconfig.json"
					}
				}
			}
		},
		{
			"files": [
				"**/*.d.ts"
			],
			"rules": {
				"strict": "off",
				"node/no-missing-import": "off",
				"spaced-comment": [
					"error",
					"always",
					{
						"markers": [
							"/"
						]
					}
				]
			}
		}
	]
}