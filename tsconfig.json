{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"lib": ["ESNext"],
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"esModuleInterop": true,
		"importHelpers": true,
		"noImplicitAny": false,
		"incremental": true,
		"noEmit": false,
		"module": "NodeNext",
		"moduleResolution": "Node16",
		"allowArbitraryExtensions": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": false,
		"strictBindCallApply": true,
		"target": "ES2022",
		"paths": {
			"@app/*": [
				"./*"
			],
			"@config/*": [
				"../config/*"
			],
			"@package.json": [
				"../package.json"
			]
		},
		"skipLibCheck": true,
		// eslint-disable-next-line unicorn/no-null
		"tsBuildInfoFile": null
	},
	"include": [
		"types/*.d.ts",
		"config/*.mts",
		"src/*.mts",
		"src/**/*.mts",
		"src/**/*.json",
		"src/**/*.d.json.ts"
	]
}
